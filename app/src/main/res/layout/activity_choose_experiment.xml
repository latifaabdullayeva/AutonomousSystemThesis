<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a71058"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ChooseExperiment">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/IntroText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Choose experiment:"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/radioButtonFirstExperiment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:checked="true"
            android:onClick="checkButton"
            android:text="First Experiment"
            android:textColor="#ffffff"
            app:buttonTint="#ffffff" />

        <RadioButton
            android:id="@+id/radioButtonSecondExperiment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="checkButton"
            android:text="Second Experiment"
            android:textColor="#ffffff"
            app:buttonTint="#ffffff" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonExperiment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Save"
        android:textColor="#a71058" />

</LinearLayout>